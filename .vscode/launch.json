{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "ios-devDebug",
            "cwd": "${workspaceFolder}",
            "type": "reactnative",
            "request": "launch",
            "target":"simulator",
            "platform": "ios",
            "runArguments": [
                "--scheme=dev",
                "--configuration=devDebug"
              ]
        },
        {
            "name": "ios-qaDebug",
            "cwd": "${workspaceFolder}",
            "type": "reactnative",
            "request": "launch",
            "target":"simulator",
            "platform": "ios",
            "runArguments": [
                "--scheme=qa",
                "--configuration=qaDebug"
              ]
        },
        {
            "name": "ios-prodDebug",
            "cwd": "${workspaceFolder}",
            "type": "reactnative",
            "request": "launch",
            "target":"simulator",
            "platform": "ios",
            "runArguments": [
                "--scheme=prod",
                "--configuration=prodDebug"
              ]
        },
        {
            //for android you need to enable debug js remotely option
            "name": "android-devDebug",
            "cwd": "${workspaceFolder}",
            "type": "reactnative",
            "request": "attach",
            "preLaunchTask": "npm: android-devDebug"  
        },
        {
            "name": "android-qaDebug",
            "cwd": "${workspaceFolder}",
            "type": "reactnative",
            "request": "attach",
            "preLaunchTask": "npm: android-qaDebug"  
        },
        {
            "name": "android-prodDebug",
            "cwd": "${workspaceFolder}",
            "type": "reactnative",
            "request": "attach",
            "preLaunchTask": "npm: android-prodDebug"  
        }
        
    ]
}